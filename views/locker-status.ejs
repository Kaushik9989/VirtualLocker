<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-DPJJFZLL9L');
</script>
  <meta charset="UTF-8">
  <title>Compartment Status</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center justify-center">
  <div class="bg-white p-8 rounded-xl shadow-xl w-96">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Locker Status</h2>
    
    <div class="text-gray-700 mb-2">
      <strong>Locker ID:</strong> <%= status.lockerId %>
    </div>
    <div class="text-gray-700 mb-2">
      <strong>Compartment ID:</strong> <%= status.compartmentId %>
    </div>
    <div class="text-gray-700 mb-2">
      <strong>Status:</strong>
      <span class="<%= status.isLocked ? 'text-red-600' : 'text-green-600' %> font-semibold">
        <%= status.isLocked ? 'Locked' : 'Unlocked' %>
      </span>
    </div>
    <div class="text-gray-700 mb-2">
      <strong>Booked:</strong>
      <span class="<%= status.isBooked ? 'text-blue-600' : 'text-gray-600' %> font-semibold">
        <%= status.isBooked ? 'Yes' : 'No' %>
      </span>
    </div>
    <% if (status.bookingInfo && status.bookingInfo.userId) { %>
      <div class="text-gray-700 mb-2">
        <strong>User ID:</strong> <%= status.bookingInfo.userId %>
      </div>
      <div class="text-gray-700 mb-2">
        <strong>Booking Time:</strong> <%= new Date(status.bookingInfo.bookingTime).toLocaleString() %>
      </div>
      <div class="text-gray-700 mb-2">
        <strong>OTP:</strong> <%= status.bookingInfo.otp %>
      </div>
    <% } %>
    
    <div class="text-center mt-6">
      <a href="/locker/emulator/<%= status.lockerId %>" class="text-blue-600 hover:underline">‚Üê Back to Emulator</a>
    </div>
  </div>
</body>
</html>
