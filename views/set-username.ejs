        padding: 14px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1rem;
        color: #374151;
        text-decoration: none;
        border-radius: 6px;
        margin: 4px 12px;
        transition: background-color 0.2s, color 0.2s;
      }

      .main-nav .nav-item:hover {
        background-color: #f3f4f6;
        color: #111827;
      }

      .main-nav .nav-item.active {
        background-color: #eef2ff;
        color: #4e54c8;
        font-weight: 600;
      }

      .main-nav .nav-item i {
        width: 20px;
        text-align: center;
      }

      .main-nav .nav-item .label {
        display: inline;
      }
