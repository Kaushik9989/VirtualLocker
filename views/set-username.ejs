    /* Base nav styles */
    .main-nav {
      z-index: 999;
      background-color: #fff;
      font-family: 'Poppins', sans-serif;
    }

    /* Mobile bottom nav */
    @media (max-width: 767px) {
      .main-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        border-top: 1px solid #eee;
      }

      .main-nav .nav-item {
        flex: 1 1 auto;
        text-align: center;
        font-size: 0.85rem;
        color: #6b7280;
        text-decoration: none;
      }

      .main-nav .nav-item .label {
        display: block;
        font-size: 0.75rem;
      }
    }

    /* Desktop vertical sidebar */
    @media (min-width: 768px) {
      .main-nav {

        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        width: 250px;
        padding-top: 80px;
        /* space for logo/header */
        padding-bottom: 40px;
        border-right: 1px solid #eee;
        display: flex;
        flex-direction: column;
        background-color: #fff;
      }

