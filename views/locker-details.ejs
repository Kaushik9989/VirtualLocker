    <meta charset="UTF-8" />
    <title>Locker Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="container py-5">
    <div id="qr-reader"></div>

    <h2>Locker Details</h2>
    <div class="card p-4 mb-4">
      <p><strong>Locker ID:</strong> <%= locker.lockerId %></p>
      <p>
        <strong>Total Compartments:</strong> <%= locker.compartments.length %>
      </p>
    </div>

    <h4>Compartments</h4>
    <div class="card-body">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Compartment</th>
            <th>Booked</th>
            <th>Locked</th>
            <th>QR CODE</th>
            <th>Location</th>
            <th>Size</th>
          </tr>
        </thead>
        <tbody>
          <% locker.compartments.forEach(comp => { %>
          <tr>
            <td>Compartment <%= comp.compartmentId %></td>
            <td>
              <span
                class="badge <%= comp.isBooked ? 'bg-success' : 'bg-danger' %>"
              >
                <%= comp.isBooked ? 'Yes' : 'No' %>
              </span>
            </td>
            <td>
              <span
                class="badge <%= comp.isLocked ? 'bg-success' : 'bg-danger' %>"
              >
                <%= comp.isLocked ? 'Yes' : 'No' %>
              </span>
            </td>
            <td>
              <span>
                <a href="<%= comp.qrCode %>">QR CODE</a>
              </span>
            </td>
            <td>
              <span title="<%= locker.location.address %>">
                <%= locker.location.address.length > 40 ?
                locker.location.address.slice(0, 40) + "..." :
                locker.location.address %>
              </span>
            </td>
            <td><%=comp.size%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <a href="/admin/dashboard" class="btn btn-secondary mt-4"
      >Back to Dashboard</a
    >
  </body>
</html>
