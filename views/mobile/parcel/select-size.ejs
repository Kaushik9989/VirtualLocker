<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Parcel Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .size-option {
            border: 2px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .size-option.selected {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
        }

        .size-option img {
            height: 50px;
            margin-bottom: 10px;
        }

        .size-label {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .size-radio {
            display: none;
        }
    </style>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <%- include('../../partials/navbar') %>

        <!-- Main Content -->
        <div class="container mt-5">
            <h4 class="mb-4">ðŸ“¦ Select your Size</h4>
            <form action="/mobile/send/select-locker/<%= locker.lockerId %>" method="POST">
                <div class="row g-3 text-center">
                    <div class="col-md-4">
                        <label class="size-option d-block" id="smallOption">
                            <input class="size-radio" type="radio" name="size" value="small" required>
                            <i class="fas fa-box-open text-primary fa-2x"></i>
                            <div class="mt-2 fw-semibold">Small</div>
                        </label>
                    </div>

                    <div class="col-md-4">
                        <label class="size-option d-block" id="mediumOption">
                            <input class="size-radio" type="radio" name="size" value="medium" required>
                            <i class="fas fa-box text-warning fa-2x"></i>
                            <div class="mt-2 fw-semibold">Medium</div>
                        </label>
                    </div>

                    <div class="col-md-4">
                        <label class="size-option d-block" id="largeOption">
                            <input class="size-radio" type="radio" name="size" value="large" required>
                            <i class="fa-solid fa-boxes-stacked text-danger fa-2x"></i>
                            <div class="mt-2 fw-semibold">Large</div>
                        </label>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5">Continue</button>
                </div>
            </form>
        </div>


</body>
<script>
  const sizeOptions = document.querySelectorAll('.size-option');
  sizeOptions.forEach(option => {
    option.addEventListener('click', () => {
      sizeOptions.forEach(o => o.classList.remove('selected'));
      option.classList.add('selected');
      option.querySelector('input').checked = true;
    });
  });
</script>
</html>