  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
        <div class="card shadow-sm p-4">
          <div class="card-body text-center">
            <!-- Icon -->
            <div class="icon-circle mb-3">
              <i class="fas fa-lock"></i>
            </div>
            <!-- Title -->
            <h3 class="fw-bold mb-1">Verify OTP</h3>
            <p class="text-muted mb-3 small">Enter the 6-digit code sent to your phone</p>

            <!-- Error Alert -->
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <!-- OTP Form -->
            <form method="POST" action="/verify-login" class="mt-3">
              <div class="mb-3">
                <input
                  type="text"
                  name="otp"
                  id="otp"
                  maxlength="6"
                  placeholder="______"
                  class="form-control otp-input rounded"
                  required
                />
              </div>
              <button type="submit" class="btn btn-success btn-lg w-100 btn-login">
                <i class="fas fa-check-circle me-2"></i>Verify & Login
              </button>
            </form>

            <!-- Resend Link -->
<p class="text-muted small mt-4 mb-0">
  Didn’t get the code?
  <form id="resendForm" action="/resend-login-otp" method="POST" class="d-inline">
    <input type="hidden" name="phone" value="<%= phone %>" />
    <button type="submit" class="btn btn-link p-0 m-0 align-baseline text-primary small">
      Resend OTP
    </button>
  </form>
</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
  try {
    // Track OTP screen viewed
    gtag('event', 'otp_sent');

    // Track when OTP is submitted
    const form = document.querySelector('form[action="/verify-login"]');
    if (form) {
      form.addEventListener('submit', () => {
        gtag('event', 'otp_entered');
      });
    }
  } catch (err) {
    console.warn("GA OTP tracking failed:", err);
  }
</script>


