        text-align: center;
        font-size: 0.85rem;
        color: #6b7280;
        text-decoration: none;
      }

      .main-nav .nav-item .label {
        display: block;
        font-size: 0.75rem;
      }
    }

    /* Desktop vertical sidebar */
