<% layout("/layouts/boilerplate") %>

<style>
  body {
    min-height: 100vh;
    background: linear-gradient(to bottom right, #e0f2fe, #fffaf0);
    font-family: 'Poppins', sans-serif;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  .card {
    border: none;
    border-radius: 1rem;
  }
  .icon-circle {
    width: 64px;
    height: 64px;
    background: #4e54c8;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin: 0 auto 1rem auto;
  }
  .icon-circle i {
    font-size: 1.5rem;
  }
  .otp-input {
    letter-spacing: 10px;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
  }
  .btn-login {
    border-radius: 2rem;
    padding: 0.75rem;
    font-weight: 600;
  }
  .resend-link {
    font-weight: 500;
  }
</style>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
        <div class="card shadow-sm p-4">
          <div class="card-body text-center">
            <!-- Icon -->
            <div class="icon-circle mb-3">
              <i class="fas fa-lock"></i>
            </div>
            <!-- Title -->
            <h3 class="fw-bold mb-1">Verify OTP</h3>
            <p class="text-muted mb-3 small">Enter the 6-digit code sent to your phone</p>

            <!-- Error Alert -->
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <!-- OTP Form -->
            <form method="POST" action="/verify-login" class="mt-3">
              <div class="mb-3">
                <input
                  type="text"
                  name="otp"
                  id="otp"
                  maxlength="6"
                  placeholder="______"
                  class="form-control otp-input rounded"
                  required
                />
              </div>
              <button type="submit" class="btn btn-success btn-lg w-100 btn-login">
                <i class="fas fa-check-circle me-2"></i>Verify & Login
              </button>
            </form>

            <!-- Resend Link -->
            <p class="text-muted small mt-4 mb-0">
              Didnâ€™t get the code?
              <a href="/resend-login-otp" class="resend-link text-decoration-none text-primary">
                Resend OTP
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
