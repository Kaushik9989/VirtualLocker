  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Drop Point ‚Äì Login</title>

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to bottom right, #f0f4ff, #fffefc);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .login-wrapper {
      width: 100%;
      max-width: 460px;
      padding: 30px 20px;
    }

    .logo {
      max-height: 60px;
      border-radius: 16px;
      background: #333;
      padding: 6px 10px;
    }

    .form-control {
      border-radius: 10px;
      padding: 10px 14px;
    }

    .form-control:focus {
      border-color: #2563eb;
      box-shadow: 0 0 8px rgba(37, 99, 235, 0.2);
    }

    .btn-orange {
      background-color: #2563eb;
      color: white;
      border-radius: 10px;
      font-weight: 500;
    }

    .btn-orange:hover {
      background-color: #1d4ed8;
    }

    .btn-google {
      border: 1px solid #ccc;
      border-radius: 10px;
      background: white;
      color: #333;
      font-weight: 500;
    }

    .btn-google:hover {
      background-color: #f8f9fa;
    }

    .feature-box {
      padding: 10px;
      border-radius: 12px;
      font-size: 0.9rem;
      font-weight: 500;
      color: #475569;
    }

    .feature-box i {
      font-size: 20px;
      color: #2563eb;
      margin-bottom: 4px;
    }

    @media (max-width: 576px) {
      .login-wrapper {
        padding: 20px 15px;
      }
    }
  </style>
</head>

<body>
  <div class="login-wrapper mx-auto">
    <!-- Logo and Heading -->
    <div class="text-center mb-4">
      <img src="/uploads/droppointlogo.png" alt="Drop Point Logo" class="logo mb-3" />
      <h2 class="fw-bold text-primary">Welcome to Drop Point</h2>
      <p class="text-muted small">Smart parcel delivery made simple</p>
    </div>

    <!-- Features -->
    <div class="d-flex justify-content-between mb-4">
      <div class="feature-box text-center w-100 mx-1">
        <i class="fas fa-bolt"></i><br>Fast
      </div>
      <div class="feature-box text-center w-100 mx-1">
        <i class="fas fa-shield-alt text-success"></i><br>Secure
      </div>
      <div class="feature-box text-center w-100 mx-1">
        <i class="fas fa-check-circle text-warning"></i><br>Reliable
      </div>
    </div>

    <!-- Alert -->
    <% if (error) { %>
      <div class="alert alert-danger d-flex align-items-center">
        <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
      </div>
    <% } %>

    <!-- Google Login -->
    <div class="d-grid mb-3">
      <a href="/auth/google" class="text-decoration-none">
        <button type="button" class="btn btn-google d-flex align-items-center justify-content-center w-100">
          <img src="https://www.google.com/favicon.ico" alt="Google" style="width: 20px; height: 20px;" class="me-2" />
          Sign in with Google
        </button>
      </a>
    </div>

    <div class="text-center text-muted mb-2">OR</div>

    <!-- Phone Login -->
    <form method="POST" action="/otpLogin">
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-phone"></i>&nbsp; +91 -</span>
          <input type="text" class="form-control" id="phone" name="phone"  required />
        </div>
      </div>
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-orange">
          <i class="fas fa-sign-in-alt me-2"></i>Get Started with Phone
        </button>
      </div>
    </form>

    <!-- Links -->
    
    <p class="text-center small">
      Admin? <a href="/admin/login" class="fw-semibold text-decoration-none text-primary">Login here</a>
    </p>

    <!-- Trust indicators -->
    <p class="text-center small text-muted mt-3">
      By continuing, you agree to our <a href="#" class="text-decoration-none">Terms</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>.
    </p>
    <div class="d-flex justify-content-center gap-3 text-muted small">
      <span><i class="fas fa-shield-alt me-1"></i>Secure</span>
      <span><i class="fas fa-envelope me-1"></i>No Spam</span>
      <span><i class="fas fa-thumbs-up me-1"></i>Trusted</span>
    </div>
  </div> <script>
  function trackUserAction(step, method = 'pageview') {
    fetch('/analytics/user-action', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        step,
        method,
        path: window.location.pathname
      })
    });
  }
</script>
  <script>
  trackUserAction('login_page');

  document.querySelector("form[action='/otpLogin']")?.addEventListener("submit", () => {
    trackUserAction('login_phone', 'submit');
  });

  document.querySelector("a[href='/auth/google']")?.addEventListener("click", () => {
    trackUserAction('login_google', 'click');
  });
</script>

<script>
  try {
    // Page view tracking
    gtag('event', 'visit_landing_page',{ 'debug_mode':true } );

    // Google login button tracking
    document.querySelector('a[href="/auth/google"]').addEventListener('click', () => {
      gtag('event', 'click_login', { method: 'oauth' },{ 'debug_mode':true });
      gtag('event', 'login_oauth',{ 'debug_mode':true });
      sessionStorage.setItem('login_time', Date.now()); // Start timer
    });

    // Phone login form tracking
    const phoneForm = document.querySelector('form[action="/otpLogin"]');
    if (phoneForm) {
      phoneForm.addEventListener('submit', () => {
        gtag('event', 'click_login', { method: 'phone' },{ 'debug_mode':true });
        gtag('event', 'login_phone',{ 'debug_mode':true });
        sessionStorage.setItem('login_time', Date.now()); // Start timer
      });
    }
  } catch (err) {
    console.warn("GA tracking failed:", err);
  }
</script>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
