<body class="bg-light min-vh-100 d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Booking Details</h2>
            <div class="mb-3">
              <p><strong>Locker ID:</strong> <%= bookingData.lockerId %></p>
              <p><strong>Compartment ID:</strong> <%= bookingData.compartmentId %></p>
              <p><strong>OTP:</strong> <%= bookingData.otp %></p>
            </div>
            <h3 class="mt-4 mb-3 text-center">Scan this QR to unlock:</h3>
            <div class="text-center">
              <img src="<%= qrUrl %>" alt="Locker QR Code" class="img-fluid rounded" style="max-width: 200px;">
            </div>
            <div class="d-grid mt-4">
              <a href="/dashboard" class="btn btn-primary">Back to Dashboard</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
