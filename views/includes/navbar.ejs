<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Navbar with Sidebar Toggle</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    .dropdown-menu {
      position: absolute;
      z-index: 1000;
      display: none;
    }

    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 0;
    }

    .navbar {
      background-color: white !important;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1050;
    }

    .navbar-brand {
      font-size: 1.2rem;
      color: #fff !important;
      transition: transform 0.3s ease;
    }

    .navbar-brand:hover {
      transform: scale(1.05);
    }

    .btn-outline-light {
      border-radius: 20px;
      font-size: 0.8rem;
      padding: 0.3rem 0.8rem;
    }

    .navbar-text .badge {
      font-size: 0.75rem;
      padding: 0.3em 0.8em;
      border-radius: 15px;
    }

    .offcanvas {
      width: 250px;
      background-color: #111;
      color: black;
    }

    .offcanvas a {
      color: black;
      text-decoration: none;
    }

    .offcanvas a:hover {
      color: #00aced;
    }

    li {
      margin-top: 6px;
      padding: 14px;
    }

    li:hover {
      box-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
    }

    .content {
      padding-top: 80px;
    }

    .text-orange {
      color: orange !important;
    }

    .text-orange:hover {
      color: #ffcc66 !important;
    }

    .btn-outline-orange {
      border: 1px solid orange;
      color: orange;
    }

    .btn-outline-orange:hover {
      background-color: orange;
      color: black;
    }

    .avatar-placeholder {
      width: 36px;
      height: 36px;
      font-size: 1rem;
    }

    .a {
      font-size: 1.75rem;
    }

    @media (max-width: 768px) {
      .navbar-brand {
        width: 10px;

      }

      .a-def {
        margin-left: 100px;
      }
    }
  </style>
</head>

<body class="mb-5">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg mb-5" style="background-color: white;">
    <div class="container px-3 d-flex justify-content-between align-items-center flex-wrap">
      <!-- Desktop Logo -->
      <a class="navbar-brand d-none d-md-block" href="/dashboard">
        <img src="/uploads/droppointlogo.png" alt="Desktop Logo"
          style="height: 50px; width: 140px; border-radius: 12px; background-color: #111;" />
      </a>

      <% var activePage=typeof activePage !=='undefined' ? activePage : '' ; %>
        <!-- Mobile Logo (only visible on small screens) -->
        <a class="navbar-brand d-block d-md-none" href="/dashboard">
          <img src="/uploads/mobile-logo.png" alt="Logo Mobile"
            style="height: 60px; width: 43px; border-radius: 8px;" />
        </a>
        <!-- Center Nav Icons Group -->
        <div class="d-flex gap-4 justify-content-center align-items-center flex-wrap">
          <% if (activePage==='home' ) { %>
            <a href="/dashboard" class="a-def nav-item text-center fw-semibold text-orange" style="font-size: 1rem;">
              <!-- <i class="fas fa-home"></i><br />Home -->Home
            </a>
            <% } %>
              <% if (activePage==='send' ) { %>
                <a href="/sendParcel" class=" a-def nav-item text-center fw-semibold text-orange"
                  style="font-size: 1rem;">
                  <!-- <i class="fas fa-paper-plane"></i><br />Send -->Send
                </a>
                <% } %>
                  <% if (activePage==='receive' ) { %>
                    <a href="/receive" class="a-def nav-item text-center fw-semibold text-orange position-relative"
                      style="font-size: 1rem;">
                      <i class="fas fa-box-open"></i><br />
                      Receive
                      <% if (parcelCount> 0) { %>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                          <%= parcelCount %>
                        </span>
                        <% } %>
                    </a>
                    <% } %>
                      <% if (activePage==='locations' ) { %>
                        <a href="/locations" class="a-def nav-item text-center fw-semibold text-orange"
                          style="font-size: 0.9rem;">
                          <!-- <i class="fas fa-map-marker-alt"></i><br />Locations --> Locations
                        </a>
                        <% } %>
                          <% if (activePage==='account' ) { %>
                            <a href="/account" class="a-def nav-item text-center fw-semibold text-orange"
                              style="font-size: 1rem;">
                              <!-- <i class="fas fa-user"></i><br />Account --> Account
                            </a>
                            <% } %>
        </div>

        <!-- Right Side Buttons -->
        <div class="d-flex align-items-center gap-3">
          <!-- Notification Bell -->
          <button class="btn btn-link position-relative p-2 me-2" data-bs-toggle="offcanvas"
            data-bs-target="#notificationsOffcanvas">
            <i class="bi bi-bell fs-5"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"></span>
          </button>

          <!-- User Dropdown -->
          <div class="dropdown">
            <a href="/account" style="color: white; text-decoration: none;"> <button class="btn btn-link p-1">
                <div class="user-avatar rounded-circle overflow-hidden">
                  <div
                    class="avatar-placeholder bg-primary text-white d-flex align-items-center justify-content-center rounded-circle"
                    style="width: 36px; height: 36px;">
                    <%= user?.username ? user.username.charAt(0).toUpperCase() : 'U' %>
                  </div>
                </div>
              </button></a>

          </div>

          <!-- Sidebar Toggle -->
          <button class="btn btn-outline-orange border-0" id="sidebarToggleBtn" data-bs-toggle="offcanvas"
            data-bs-target="#rightSidebar" aria-controls="rightSidebar">
            <i class="fa-solid fa-bars text-orange" id="toggleIcon"></i>
          </button>
        </div>
    </div>
  </nav>


  <!-- Right Sidebar -->
  <div class="offcanvas offcanvas-end bg-white text-black" tabindex="-1" id="rightSidebar"
    aria-labelledby="rightSidebarLabel">
    <div class="offcanvas-header border-bottom border-secondary">
      <h5 class="offcanvas-title text-orange" id="rightSidebarLabel">Drop Point</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="nav flex-column">
        <li class="nav-item mb-3"><a class="nav-link" href="/dashboard"><i
              class="fa-solid fa-house me-2 text-orange"></i> Home</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="/map"><i
              class="fa-solid fa-map-location-dot me-2 text-orange"></i> Book a Locker</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="#"><i
              class="fa-solid fa-calendar-days me-2 text-orange"></i> Events</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="#"><i class="fa-solid fa-phone me-2 text-orange"></i>
            Contact</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="#"><i class="fa-solid fa-gear me-2 text-orange"></i>
            Settings</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="/logout"><i
              class="fas fa-sign-out-alt me-2 text-orange"></i> Logout</a></li>
        <li class="nav-item mb-3"><a class="nav-link" href="/history"><i class="fas fa-history me-2 text-orange"></i>
            Parcel History</a></li>
      </ul>

      <hr class="border-secondary" />
      <h6 class="text-orange">Follow Us</h6>
      <div class="d-flex gap-3 mt-2">
        <a href="#"><i class="fa-brands fa-facebook text-orange fs-5"></i></a>
        <a href="#"><i class="fa-brands fa-twitter text-orange fs-5"></i></a>
        <a href="#"><i class="fa-brands fa-instagram text-orange fs-5"></i></a>
        <a href="#"><i class="fa-brands fa-youtube text-orange fs-5"></i></a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
  <script>
    const toggleBtn = document.getElementById("sidebarToggleBtn");
    const toggleIcon = document.getElementById("toggleIcon");
    const sidebar = document.getElementById("rightSidebar");

    sidebar.addEventListener("shown.bs.offcanvas", () => {
      toggleIcon.classList.remove("fa-bars");
      toggleIcon.classList.add("fa-xmark");
    });

    sidebar.addEventListener("hidden.bs.offcanvas", () => {
      toggleIcon.classList.remove("fa-xmark");
      toggleIcon.classList.add("fa-bars");
    });
  </script>
</body>

</html>