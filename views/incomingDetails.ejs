<% layout("/layouts/boilerplate") %>

<style>
  .details-container {
    max-width: 600px;
    margin: 2rem auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 6px rgba(0,0,0,0.1);
    padding: 1.5rem;
  }
  .details-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .badge {
    padding: 4px 10px;
    border-radius: 10px;
    font-size: 0.75rem;
  }
  .badge-status {
    background: #eef2ff;
    color: #4338ca;
  }
  .detail-row {
    margin-top: 1rem;
  }
  .detail-label {
    font-weight: 600;
    color: #6b7280;
  }
  .qr-preview {
    width: 150px;
    margin: 1rem 0;
  }
</style>

<div class="details-container">
  <div class="details-header">
    <h5>Parcel Details</h5>
    <span class="badge badge-status"><%= parcel.status %></span>
  </div>

  <div class="detail-row">
    <div class="detail-label">Sender:</div>
    <div><%= parcel.senderName || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Receiver:</div>
    <div><%= parcel.receiverName || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Phone:</div>
    <div><%= parcel.receiverPhone %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Parcel Type:</div>
    <div><%= parcel.parcelType || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Size:</div>
    <div><%= parcel.size || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Cost:</div>
    <div>â‚¹<%= parcel.cost || '0.00' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Access Code:</div>
    <div><%= parcel.accessCode || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Locker:</div>
    <div><%= parcel.lockerId || 'Not assigned' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Compartment:</div>
    <div><%= parcel.compartmentId || 'N/A' %></div>
  </div>
  <% if (parcel.qrCodeUrl) { %>
    <div class="detail-row">
      <div class="detail-label">QR Code:</div>
      <img src="<%= parcel.qrCodeUrl %>" class="qr-preview"/>
    </div>
  <% } %>
  <div class="detail-row">
    <div class="detail-label">Description:</div>
    <div><%= parcel.metadata?.description || 'N/A' %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Created:</div>
    <div><%= parcel.createdAt?.toLocaleString() || 'N/A' %></div>
  </div>
</div>
