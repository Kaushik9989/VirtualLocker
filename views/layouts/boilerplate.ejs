        <script>
          const stepFromPath = (path) => {
  if (path.includes("/send/step1")) return "Name Entry";
  if (path.includes("/send/step2")) return "send_step_2";
  if (path.includes("/send/step3")) return "Payment";
  if (path.includes("/payment")) return "payment";
  if (path.includes("/completed")) return "completed";
  return null;
};

window.addEventListener("load", () => {
  const step = stepFromPath(window.location.pathname);
  const start = Date.now();

  window.addEventListener("beforeunload", () => {
    const duration = Date.now() - start;

    fetch("/analytics/step-duration", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        step,
        path: window.location.pathname,
        durationMs: duration,
        timestamp: new Date().toISOString(),
      })
    });
  });
});
         
          

