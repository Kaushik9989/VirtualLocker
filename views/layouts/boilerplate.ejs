<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>DropPoint</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous" />

  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Plus+Jakarta+Sans&display=swap"
    rel="stylesheet" />

  <!-- Map Libraries -->
  <link href="https://unpkg.com/maplibre-gl@3.0.0/dist/maplibre-gl.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44c=" crossorigin="" />
  <!-- lottie animations-->
  <script src="https://unpkg.com/lottie-web@5.10.1/build/player/lottie.min.js"></script>

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-o9N1j7kMHtDkH2Zqk6m27zO+Em1zzXhNc6zYtD38g1o=" crossorigin=""></script>
  <!-- Lottie Player Library -->
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/rating.css" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;

    }

    #locker-map {
      height: 400px;
    }

    .offcanvas-start {
      width: 250px;
      background-color: #111;
      color: white;
    }

    .offcanvas a {
      color: white;
      text-decoration: none;
    }

    .offcanvas a:hover {
      color: #00aced;
    }

    .social-icons a {
      font-size: 20px;
      margin-right: 15px;
      color: gray;
    }

    .btn-toggle {
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      color: white;
      background-color: #111;
      padding: 10px 15px;
      border-radius: 5px;
    }

    li {
      margin-top: 6px;
      padding: 14px;
    }

    li:hover {
      box-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
    }

    .main-content {
      padding-top: 70px;
      margin-left: 0;
    }

    .nav-item {
      text-align: center;
      font-size: 0.85rem;
      text-decoration: none;
      color: #6b7280;
    }

    .nav-item.active {
      color: #4e54c8;
      font-weight: 600;
    }

    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      border-top: 1px solid #eee;
      background-color: #fff;
      padding: 10px 0;
      display: flex;
      justify-content: space-around;
      z-index: 999;
    }

    .notification-dot {
      position: absolute;
      top: 4px;
      right: 4px;
      background: red;
      color: white;
      font-size: 10px;
      padding: 2px 6px;
      border-radius: 50%;
    }
  </style>
</head>
<% var activePage=typeof activePage !=='undefined' ? activePage : '' ; %>

  <body>
    <%- include("../includes/navbar.ejs") %>

      <!-- Main Content Area -->
      <div class="container-fluid main-content pt-5 mb-5">
        <%- body %>

          <!-- Lottie Loading Overlay -->
          <div id="loadingOverlay" style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: white;
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
    ">
            <lottie-player src="https://lottie.host/97883273-917a-4f71-a1f1-a7037474e981/F8bgyANDQW.json"
              background="transparent" speed="1" style="width: 200px; height: 200px;" loop autoplay>
            </lottie-player>
          </div>
      </div>

      <!-- Bottom Navigation -->
      <div class="bottom-nav">
        <a href="/dashboard" style="text-decoration: none;"
          class="nav-item <%= activePage === 'home' ? 'active' : '' %>">
          <i class="fas fa-home"></i><br />Home
        </a>
        <a href="/sendParcel" class="nav-item <%= activePage === 'send' ? 'active' : '' %>">
          <i class="fas fa-paper-plane"></i><br />Send
        </a>
        <a href="/receive" class="nav-item position-relative <%= activePage === 'receive' ? 'active' : '' %>">
          <i class="fas fa-box-open"></i><br />Receive
          <% if (typeof parcelCount !=='undefined' && parcelCount> 0) { %>
            <span class="notification-dot">
              <%= parcelCount %>
            </span>
            <% } %>
        </a>

        <a href="/locations" class="nav-item <%= activePage === 'locations' ? 'active' : '' %>">
          <i class="fas fa-map-marker-alt"></i><br />Locations
        </a>
        <a href="/account" class="nav-item <%= activePage === 'account' ? 'active' : '' %>">
          <i class="fas fa-user"></i><br />Account
        </a>
      </div>

      <!-- Scripts -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
      <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/maplibre-gl@3.0.0/dist/maplibre-gl.js"></script>
      <script src="/js/script.js"></script>

      <script>
        window.addEventListener("load", () => {
          const loader = document.getElementById("loadingOverlay");
          if (loader) {
            loader.style.transition = "opacity 0.5s";
            loader.style.opacity = 0;
            setTimeout(() => loader.remove(), 500);
          }
        });
      </script>
  </body>

</html>